
extends layout

block append vars
  - bodyclass = 'single'
block content
  article.article
    header
      include author
      h1= page.title
      p.author
        | #{ 'by ' }
        mixin author(page.metadata.author)

    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Reviews
